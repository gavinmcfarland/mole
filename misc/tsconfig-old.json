{
	"include": ["src/**/*"],
	"compilerOptions": {
		"target": "es2018",
		"module": "ESNext",
		"outDir": "esm",
		"lib": ["dom", "esnext"],
		"declaration": false,
		"moduleResolution": "node",
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"rootDir": "./src",
		"baseUrl": "./src",
		"paths": {
			"*": ["*", "node_modules/*"]
		}
	}
}
